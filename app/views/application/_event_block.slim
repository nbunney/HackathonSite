- wide ||= false
a class="event-block #{'event-block-wide' if wide}" style="background-image: url('#{event.image.url(:display)}')" href=event_url(event)
  span.inner
    h2
      = event.name
      - if event.upcoming?
        span.label.label-primary< Upcoming
    -if event.open? && current_user
      .registration
        - participant = event.participant(current_user)
        = react_component('RegisterButton', participant: participant.try(:id),
                                            createAction: event_participants_url(event),
                                            destroyAction: event_participant_url(event, ':participant_id'))
